<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><%= comment.name %></p>
    <br>
    <p class="comment_body"><%= comment.body %></p>
    <p class="comment_time">Submitted <%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>

  <p><%= link_to 'Delete', [comment.post, comment],
      method: :delete,
      class: "button",
      data: { confirm: 'Are you sure you want to delete the comment?' } %>
  </p>
      
</div>
