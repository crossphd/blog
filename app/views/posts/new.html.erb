
<div id="page_wrapper">
  <h1> Add New Post</h1>
  <br>
  <%= simple_form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
        <ul>
          <%= @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :title %>
    <br>
    <%= f.input :body, as: :text, input_html: {rows: 10, cols: 10} %>
    <br>
    <%= f.submit 'Submit'%>

  <% end %>
</div>

